<Window x:Class="Evo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evo"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid Margin="499,137,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="806" Width="1378">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="599*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="709*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="faceNorth" Content="N" HorizontalAlignment="Left" Margin="4,539,0,0" VerticalAlignment="Top" Click="FaceNorth" Grid.RowSpan="2" Height="20" Width="24"/>
        <ListView x:Name="itemsInSight" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="70,376,0,181" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="174" Grid.Column="1">
            <ListView.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </ListView.RenderTransform>
            <ListView.Style>
                <Style/>
            </ListView.Style>
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="consoleOutput" HorizontalAlignment="Left" Margin="764,311,0,0" TextWrapping="Wrap" Text="consoleOutput" VerticalAlignment="Top" Width="461" Height="364" Grid.Column="1" VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <TextBox.Style>
                <Style/>
            </TextBox.Style>
        </TextBox>
        <Label x:Name="itemsInSightLabel" Content="Items In Sight" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="116,349,0,0" Grid.RowSpan="2" Height="26" Width="82" Grid.Column="1"/>
        <Button x:Name="faceSouth" Content="S" HorizontalAlignment="Left" Margin="4,579,0,0" VerticalAlignment="Top" Click="FaceSouth" Grid.RowSpan="2" Height="20" Width="24"/>
        <Button x:Name="faceEast" Content="E" HorizontalAlignment="Left" Margin="28,559,0,0" VerticalAlignment="Top" Click="FaceEast" Grid.RowSpan="2" Height="20" Width="24"/>
        <Button x:Name="faceWest" Content="W" HorizontalAlignment="Left" Margin="-20,559,0,0" VerticalAlignment="Top" Click="FaceWest" Grid.RowSpan="2" Height="20" Width="24"/>
        <Button x:Name="travelButton" Content="Travel" HorizontalAlignment="Left" Margin="50,586,0,0" VerticalAlignment="Top" Click="MovePlayer" Grid.RowSpan="2" Height="20" Width="34"/>
        <Button x:Name="pickUpItemButton" Content="Pick Up Item" HorizontalAlignment="Left" Margin="70,598,0,0" VerticalAlignment="Top" Click="PickUpItemOffOfGround" Height="20" Width="71" Grid.Column="1" Grid.Row="1"/>
        <ListView x:Name="playerInventory" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="297,376,0,0" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="186" Height="213" >
            <ListView.Style>
                <Style/>
            </ListView.Style>
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="playerInventoryLabel" Content="Inventory" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="360,349,0,0" Grid.Column="1" Grid.RowSpan="2" Height="26" Width="59"/>
        <Button x:Name="equipWeaponButton" Content="Equip as Weapon" HorizontalAlignment="Left" Margin="297,592,0,0" VerticalAlignment="Top" Click="EquipItemAsWeapon" Grid.Column="1" Height="20" Width="100" Grid.Row="1"/>
        <ListView x:Name="entitiesInSightList" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="531,376,0,0" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" Width="187">
            <ListView.Style>
                <Style/>
            </ListView.Style>
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="entitiesInSightLabel" Grid.Column="1" Content="entitiesInSightLabel" HorizontalAlignment="Left" Margin="570,349,0,0" VerticalAlignment="Top" Grid.RowSpan="2" Height="26" Width="113"/>
        <Button x:Name="attackEntityButton" Grid.Column="1" Content="Attack Entity Mele" HorizontalAlignment="Left" Margin="535,586,0,0" VerticalAlignment="Top" Click="AttackEntity" Height="20" Width="100" Grid.Row="1"/>
        <Button x:Name="rackGunButton" Grid.Column="1" Content="Rack Gun" HorizontalAlignment="Left" Margin="297,665,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.58,-0.198" Click="RackGun" Height="20" Width="53" Grid.Row="1"/>
        <Button x:Name="dropItemButton" Content="Drop Item" HorizontalAlignment="Left" Margin="297,620,0,0" VerticalAlignment="Top" Click="EquipItemAsWeapon" Grid.Column="1" Height="20" Width="81" Grid.Row="1"/>
        <Button x:Name="loadMagazineButton" Grid.Column="1" Content="Load Magazine " HorizontalAlignment="Left" Margin="366,665,0,0" VerticalAlignment="Top" Click="LoadMagazine" Height="20" Width="87" Grid.Row="1"/>
        <Button x:Name="fireAtEntityButton" Grid.Column="1" Content="Shoot At Entity" HorizontalAlignment="Left" Margin="535,613,0,0" VerticalAlignment="Top" Click="FireAtEntity" Height="20" Width="83" Grid.Row="1"/>
        <Label x:Name="equippedWeaponLabel" Grid.Column="1" Content="Equipped Weapon: " HorizontalAlignment="Left" Margin="297,638,0,0" VerticalAlignment="Top" Height="26" Width="113" RenderTransformOrigin="0.729,0.502" Grid.Row="1"/>
        <Label x:Name="equippedWeapon" Grid.Column="1" Content="nothing" HorizontalAlignment="Left" Margin="409,639,0,0" VerticalAlignment="Top" Width="144" Height="26" Grid.Row="1"/>
        <Button x:Name="saveGameButton" Content="Save Game" HorizontalAlignment="Left" Margin="-323,-102,0,0" VerticalAlignment="Top" Click="SaveGame"/>
        <Button x:Name="loadGameButton" Content="Load Game" HorizontalAlignment="Left" Margin="-323,-75,0,0" VerticalAlignment="Top" Click="LoadGame"/>
        <Button x:Name="newGameButton" Content="New Game" HorizontalAlignment="Left" Margin="-417,-75,0,0" VerticalAlignment="Top" Click="NewGame"/>
        <Label x:Name="playerDirectionLabel" Content="Player Direction:" HorizontalAlignment="Left" Margin="33,522,0,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
        <Label x:Name="playerDirection" Content="?" HorizontalAlignment="Left" Margin="134,522,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="23" Grid.ColumnSpan="2"/>
        <Label x:Name="loadingStatusLabel" Content="Loading Status: done" HorizontalAlignment="Left" Margin="-243,-104,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="accurateFireRB" Grid.Column="1" Content="Accurate Fire" HorizontalAlignment="Left" Margin="604,655,0,0" VerticalAlignment="Top" GroupName="fireMode" Grid.Row="1"/>
        <Label x:Name="fireModeLabel" Grid.Column="1" Content="Fire Mode" HorizontalAlignment="Left" Margin="535,647,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <RadioButton x:Name="fastFireRB" Grid.Column="1" Content="Fast Fire" HorizontalAlignment="Left" Margin="604,673,0,0" VerticalAlignment="Top" GroupName="fireMode" Grid.Row="1"/>
        <RadioButton x:Name="supressiveFireRB" Grid.Column="1" Content="Supressive Fire " HorizontalAlignment="Left" Margin="604,693,0,0" VerticalAlignment="Top" GroupName="fireMode" Grid.Row="1"/>
        <Grid Margin="-436,25,90,295" Grid.RowSpan="2">
            <Image x:Name="mapArea_x0_y0" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/forest.png" RenderTransformOrigin="0.5,0.5" Margin="195,155,0,0"/>
            <Image x:Name="mapArea_x_1_y_1" HorizontalAlignment="Left" Height="100" Margin="96,55,0,0" VerticalAlignment="Top" Width="100" Source="/forest.png" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="mapArea_x1_y0" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/forest.png" Margin="295,155,0,0" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="mapArea_x_1_y1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/forest.png" Margin="96,255,0,0" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="mapArea_x_1_y0" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/forest.png" Margin="96,155,0,0" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="mapArea_x0_y1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/forest.png" Margin="195,255,0,0" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="mapArea_x1_y1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/forest.png" Margin="295,255,0,0" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="mapArea_x0_y_1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/forest.png" Margin="195,55,0,0" RenderTransformOrigin="0.5,0.5"/>
            <Image x:Name="mapArea_x1_y_1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/forest.png" Margin="295,55,0,0" RenderTransformOrigin="0.5,0.5"/>
            <Label x:Name="_600x600_map_viewLabel" Content="600x600 map view" HorizontalAlignment="Left" Margin="191,29,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Label x:Name="mapPosLabel" Content="X:? Y:?" HorizontalAlignment="Left" Margin="-232,395,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="94"/>
        <Button x:Name="fillMagazineButton" Grid.Column="1" Content="Fill Magazine" HorizontalAlignment="Left" Margin="366,690,0,0" VerticalAlignment="Top" Click="LoadMagazine" Height="20" Width="88" Grid.Row="1"/>
        <Label x:Name="loadingNoteLabel" Content="Note: Takes 7~ seconds to load a save" HorizontalAlignment="Left" Margin="-243,-78,0,0" VerticalAlignment="Top"/>
        <Label x:Name="gameVersionLabel" Content="v0.4.0" HorizontalAlignment="Left" Margin="-406,-106,0,0" VerticalAlignment="Top"/>
        <Button x:Name="mainMenuButton" Content="Main Menu" HorizontalAlignment="Left" Margin="-493,-131,0,0" VerticalAlignment="Top" Click="NewGame"/>
        <ListBox x:Name="itemsInSightListBox" Grid.RowSpan="2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="-279,531,279,0" Height="179" VerticalAlignment="Top"/>
    </Grid>
</Window>
